<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="diceInterface" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.DiceController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text fx:id="message" strokeType="OUTSIDE" strokeWidth="0.0" text=" " textAlignment="CENTER" wrappingWidth="200.0" />
            <ImageView fx:id="diceImage" fitHeight="150.0" fitWidth="200.0" onMouseClicked="#rollButtonClicked" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../asset/dice1.png" />
               </image>
            </ImageView>
            <Button fx:id="button" alignment="CENTER" mnemonicParsing="false" onAction="#rollButtonClicked" prefHeight="31.0" prefWidth="108.0" text="Start Rolling" />
            <Text fx:id="text" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="200.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
