<Pane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BoardSelectionController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#082c4d" height="804.0" stroke="BLACK" strokeType="INSIDE" width="805.0" />
      <ImageView fitHeight="1228.0" fitWidth="1167.0" layoutX="27.0" layoutY="4.0" pickOnBounds="true" preserveRatio="true" rotate="-29.1" x="-70.0" y="-140.0">
         <image>
            <Image url="@../../asset/coralsnake.png" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="800.0">
         <children>
            <Label fx:id="title" alignment="CENTER" prefHeight="120.0" prefWidth="360.0" text="Select Board" textFill="#8d6b23">
               <font>
                  <Font name="Papyrus" size="50.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" prefHeight="175.0" prefWidth="800.0">
               <children>
                  <ToggleButton fx:id="player1" mnemonicParsing="false" onAction="#numberClicked" prefHeight="175.0" prefWidth="175.0" text="Default">
                     <font>
                        <Font name="Papyrus" size="30.0" />
                     </font>
                     <toggleGroup>
                        <ToggleGroup fx:id="playerNumber" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton fx:id="player2" mnemonicParsing="false" onAction="#numberClicked" prefHeight="175.0" prefWidth="175.0" text="Simple" toggleGroup="$playerNumber">
                     <font>
                        <Font name="Papyrus" size="30.0" />
                     </font>
                  </ToggleButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="175.0" prefWidth="800.0">
               <children>
                  <ToggleButton fx:id="player3" mnemonicParsing="false" onAction="#numberClicked" prefHeight="175.0" prefWidth="175.0" text="Ladders Only" toggleGroup="$playerNumber">
                     <font>
                        <Font name="Papyrus" size="20.0" />
                     </font>
                  </ToggleButton>
                  <ToggleButton fx:id="player4" mnemonicParsing="false" onAction="#numberClicked" prefHeight="175.0" prefWidth="175.0" text="Snakes Only" toggleGroup="$playerNumber">
                     <font>
                        <Font name="Papyrus" size="20.0" />
                     </font>
                  </ToggleButton>
               </children>
            </HBox>
            <Pane maxHeight="268.0" minHeight="0.0" prefHeight="167.0" prefWidth="800.0">
               <children>
                  <Button fx:id="backButton" layoutX="160.0" layoutY="135.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="70.0" prefWidth="140.0" text="&lt; Back">
                     <font>
                        <Font name="Papyrus" size="22.0" />
                     </font>
                  </Button>
                  <Button fx:id="nextButton" disable="true" layoutX="520.0" layoutY="135.0" mnemonicParsing="false" onAction="#nextButtonClicked" prefHeight="70.0" prefWidth="140.0" text="Next &gt;">
                     <font>
                        <Font name="Papyrus" size="22.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</Pane>
